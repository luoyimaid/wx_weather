
/**index.wxss**/
.wrapper{
  width:100%;
  height:100%;
  box-sizing: border-box;
  position:absolute;/*绝对定位*/
  top:0;
  left:0;
  padding:0rpx;
  font-family:  "Helvetica","PingHei",Geneva,'Lucida Sans Regular','Lucida Sans', 'Lucida Grande', 'Lucida Sans Unicode',  Verdana, sans-serif;
  background: #40a7e7;

}
 
.curWeather{
  height:650rpx;
  display: flex;
  flex-direction: column;/*纵向*/
}
 
.bg{
  height:700rpx; 
  width:750rpx;
}
 
.curTemperature{
  color:rgb(12, 12, 12);
  font-size: 0.8em;
  flex-grow: 1;/*表示将剩余的空间分配给它*/
}
 
.tmp{
  height: 150rpx;
  width: 250rpx;
  font-size: 5em;
  position:absolute;
  left:30rpx;
  top:80rpx;
  color: white;
}

.placeholderClass{
  color:#add6f0;
}

.weathericon{
  position: absolute;
  height:800rpx;
  width:800rpx;
  left:100rpx;
  top:-150rpx;
}

.city{
  position:absolute;
  left:35rpx;
  top:240rpx;
  font-size: 1em;
  color: white;
}

.street{
  position:absolute;
  left:35rpx;
  top:278rpx;
  font-size: 1em;
  color: white;
}

.aircond{
   position:absolute;
  left:35rpx;
  top:480rpx;
  font-size: 35rpx;
  color: white;
}
.curExtern{
  display: flex;
  flex-direction: row;/*横向*/
  justify-content: space-around;
  color: white;

}
.val{
  text-align: center;
  font-size: 1.2em;
}
.line{
  border:0.5rpx solid #84c4ec;
}
.typeImg{
  width:50rpx;
  height:50rpx;
  vertical-align: middle;
}
.castItem{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 1rpx solid #84c4ec; 
  padding:50rpx 0;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.forecast{
  background: #65b6e8; 
  color: white;
  border-radius: 5%;
  margin-top: 20rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
  border: 1rpx solid #84c4ec;
}


.livingIndex{
  margin-bottom: 20rpx;
  margin-top: -105rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
  color: white;
  border-radius: 5%;
  background: #65b6e8;
  border: 1rpx solid #84c4ec;
}

.livingIndex .item{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 1rpx solid rgba(250, 250, 250, .2);
  padding: 20rpx 0;
  margin: 0 30rpx;
}
.livingIndex .item:last-child {
  border-bottom: none;
}
.livingIndex .item .right {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
  flex: 1;
}

.livingIndex .item .value {
  margin-top: 10rpx;
  font-size: 24rpx;
}
.livingIndex .icon {
  width: 80rpx;
  height: 80rpx;
  padding: 0 24rpx;
}
.copy {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  padding: 10rpx 0;
  height: 70rpx;
  font-size: 22rpx;
}

.search {
  position: fixed;
  z-index: 4;
  top: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 90rpx;
}
.search .wrapper1 {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  font-size: 28rpx;
  height: 60rpx;
  margin: 15rpx 50rpx;
  padding: 0 15rpx;
  box-sizing: border-box;
  /* border-radius: 10rpx; */
  /* border: 1rpx solid #999; */
  border: none;
  border-bottom: 1rpx solid #fff;
  font-color : white;
}
.search image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 16rpx;
}
.search input {
  flex: 1;
}